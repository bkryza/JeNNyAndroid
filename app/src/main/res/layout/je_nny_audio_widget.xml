<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/widget_margin" android:background="#CC333333">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView android:id="@+id/appwidget_audio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/appwidget_audio_text"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            android:contentDescription="@string/appwidget_audio_text"
            android:background="#00000000" />



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rotel_status"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_weight="0.3"
                android:text="ROTEL"/>
            <Button
                android:id="@+id/rotel_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="ON"/>
            <Button
                android:id="@+id/rotel_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="OFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/radio_status"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_weight="0.3"
                android:text="RADIO"/>
            <Button
                android:id="@+id/radio_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="ON"/>
            <Button
                android:id="@+id/radio_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="OFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/music_status"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_weight="0.3"
                android:text="MUSIC"/>
            <Button
                android:id="@+id/music_on"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="ON"/>
            <Button
                android:id="@+id/music_off"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="OFF"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/volume_status"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:layout_weight="0.3"
                android:text="MUSIC"/>
            <Button
                android:id="@+id/volume_up"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="+"/>
            <Button
                android:id="@+id/volume_down"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="-"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>